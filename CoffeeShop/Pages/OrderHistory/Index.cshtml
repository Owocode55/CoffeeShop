@page
@model CoffeeShop.Pages.OrderHistory.IndexModel
@{
}
 <h3>Order History</h3>
 <form method="post">
                   <div class="form-group">
                    <label for="exampleName">Date From</label>
                    <input type="date" class="form-control"  name="DateFrom" placeholder="Date From">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Date To</label>
                    <input type="date" class="form-control" name="DateTo" placeholder="Date To">
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Submit</button>
  </form>
@if(Model.DisplayData.Count > 0)
{
    <table>
            <thead>
            <th>Customer Name</th>
            <th>Order Number</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>OrderAmount</th>
            <th>Delivery Amount</th>
            <th>Total Amount</th>
            </thead>
            <tbody>
           @foreach (var item in Model.DisplayData)
            {
                <tr>
                <td>@item.Name</td>
                <td>@item.OrderNumber</td>
                <td>@item.Mobile</td>
                <td>@item.Address</td>
                <td>@item.OrderAmount</td>
                <td>@item.DeliveryAmount</td>
                <td>@item.TotalAmount</td>
                </tr>
             }  

        </tbody>
      </table>
}else{
  <h3>No record found</h3>
}
